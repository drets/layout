default partial alphanumeric_keys modifier_keys
xkb_symbols "neongreen" {

    name[Group1]= "Russian (neongreen)";

    include "neongreen(pre)"
    include "ru(common)"
    include "neongreen(post)"

    # О and В are temporarily moved to Backspace
    key <BKSP> {[ Cyrillic_o, Cyrillic_O, Cyrillic_ve, Cyrillic_VE ]};

    # Ы is temporarily moved to 4
    key <AE04> {[ 4, dollar, Cyrillic_yeru, Cyrillic_YERU ]};
};
